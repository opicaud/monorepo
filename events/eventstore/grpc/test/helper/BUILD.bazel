load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@rules_pkg//:pkg.bzl", "pkg_tar")
load("@rules_oci//oci:defs.bzl", "oci_image", "oci_push", "oci_tarball")

go_library(
    name = "helper_lib",
    srcs = ["main.go"],
    importpath = "github.com/opicaud/monorepo/events/eventstore/grpc/test/helper",
    visibility = ["//visibility:private"],
    deps = [
        "//events/eventstore/pkg",
        "//events/pkg",
        "@com_github_google_uuid//:uuid",
        "@com_github_gorilla_mux//:mux",
    ],
)

go_binary(
    name = "helper",
    embed = [":helper_lib"],
    visibility = ["//visibility:public"],
)

go_binary(
    name = "helper_linux",
    embed = [":helper_lib"],
    goarch = "amd64",
    goos = "linux",
    visibility = ["//visibility:private"],
)

pkg_tar(
    name = "tar",
    srcs = [":helper_linux"],
)

oci_image(
    name = "oci_helper_image",
    base = "@distroless_go",
    cmd = ["./helper_linux"],
    tars = [":tar"],
)

oci_tarball(
    name = "tarball",
    image = ":oci_helper_image",
    repo_tags = ["helper:latest"],
)

#deprecated
go_image(
    name = "helper_image",
    binary = ":helper_linux",
    visibility = ["//visibility:public"],
)

go_test(
    name = "helper_test",
    srcs = ["main_test.go"],
    embed = [":helper_lib"],
    deps = [
        "//events/pkg",
        "@com_github_stretchr_testify//assert",
    ],
)

filegroup(
    name = "config",
    srcs = [
        "config.yml",
    ],
    visibility = ["//visibility:public"],
)
