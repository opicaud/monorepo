{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "shape-app/**"
      ],
      "goGetDirs": [
        "./shape-app/..."
      ]
    },
    {
      "matchDepNames": [
        "github.com/opicaud/monorepo/grpc-eventstore",
        "github.com/opicaud/monorepo/cqrs"
      ],
      "enabled": false
    }
  ]
}
