{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "matchFileNames": [
        "shape-app/**"
      ],
      "goGetDirs": [
        "./shape-app/..."
      ]
    },
    {
      "matchDepNames": [
        "github.com/opicaud/monorepo/grpc-eventstore",
        "github.com/opicaud/monorepo/cqrs"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "addLabels": [
        "automerge"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ]
}
